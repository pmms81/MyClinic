<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyClinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyClinic.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
               @if ((User != null || User.Identity != null) && User.Identity.IsAuthenticated)
               {
                    <a class="navbar-brand" asp-area="" asp-controller="Client" asp-action="Index"><img src="~/media/health-insurance-32.png" />MyClinic</a>
                } else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Account" asp-action="Login"><img src="~/media/health-insurance-32.png"/>MyClinic</a>
                }

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!--<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Index">Client</a>
                        </li>-->
                    </ul>
                    @if ((User != null || User.Identity != null) && User.Identity.IsAuthenticated)
                    {
                    <div class="navbar-nav navbar-right">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/media/profile.png" />
                            @User?.Identity?.Name
                        </a>
                        <ul class="dropdown-menu navbar-right pt-0 pb-0" style="right:0 !important; left:auto !important;">
                            <li><a class="dropdown-item" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight" href="#">Show offcanvas</a></li>
                                <li>
                                    <hr class="dropdown-divider mt-0 mb-0">
                                </li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                        </ul>
                    </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid ps-2">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel" style="visibility: hidden;" aria-hidden="true">
        <div class="offcanvas-header offcanvas-header-customized">
            <h5 class="offcanvas-title" id="offcanvasRightLabel" style="display:flex !important; align-items: center !important;"><img src="~/media/settings-24.png" style="margin-right: 5px;" />Definitions</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            ...
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MyClinic - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            @if (User.Identity != null && User.HasClaim("TypeUser", "Admin") && User.Identity.IsAuthenticated)
            {
                <span class="text-info">I'm an Admin user, yesss'</span>
            }
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
